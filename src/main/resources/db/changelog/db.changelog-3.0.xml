<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="Claire">
        <modifyDataType tableName="event" columnName="debut_event" newDataType="date"/>
        <modifyDataType tableName="event" columnName="fin_event" newDataType="date"/>
        <modifyDataType tableName="event" columnName="debut_cfp" newDataType="date"/>
        <modifyDataType tableName="event" columnName="fin_cfp" newDataType="date"/>
        <modifyDataType tableName="event" columnName="debut_inscription" newDataType="date"/>
        <modifyDataType tableName="event" columnName="fin_inscription" newDataType="date"/>
    </changeSet>

    <changeSet id="1" author="Claire">
        <addColumn tableName="member">
            <column name="keycloak_id" type="uuid"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="Claire">
        <addColumn tableName="contact">
            <column name="public" type="boolean" defaultValueBoolean="true"><constraints nullable="false"/></column>
        </addColumn>
    </changeSet>
</databaseChangeLog>